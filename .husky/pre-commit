# Define some colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo -e "${GREEN}Hello from pre-commit!${NC}"
pwd
cd ghrunner

#run lint check
make lint

#run fmt check
diff=$(gofmt -l -s -d .)
if [ -n "$diff" ]; then
    echo -e "${RED}Files are not formatted:${NC}"
    echo "$diff"
    exit 1
else
    echo -e "${GREEN}All files are properly formatted.${NC}"
fi